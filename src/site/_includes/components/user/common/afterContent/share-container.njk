<div id="share-container" class="share-container" style="margin-top: 2rem; padding-top: 1rem; border-top: 1px solid #ddd;">
</div>

<script>
  (function() {
    // Pure function to construct share URLs
    const createShareLinks = (url, title) => [
      {
        label: "X (Twitter)",
        href: `https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(url)}`
      },
      {
        label: "LinkedIn",
        href: `https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(url)}&title=${encodeURIComponent(title)}`
      },
      {
        label: "Reddit",
        href: `https://www.reddit.com/submit?url=${encodeURIComponent(url)}&title=${encodeURIComponent(title)}`
      }
    ];

    // Impure DOM rendering (separated from logic)
    const renderLinks = (containerId) => {
      const container = document.getElementById(containerId);
      if (!container) return;

      const links = createShareLinks(window.location.href, document.title);

      const html = links.map(link =>
        `<a href="${link.href}" target="_blank" rel="noopener noreferrer" style="margin-right: 15px; text-decoration: underline;">${link.label}</a>`
      ).join('');

      container.innerHTML = `<strong>Share: </strong> ${html}`;
    };

    // Execute
    renderLinks('share-container');
  })();
</script>
